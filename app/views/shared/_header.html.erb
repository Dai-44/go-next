<header>
  <nav class='flex items-center justify-between h-16 text-sm text-slate-600 font-bold py-2 pl-5 pr-3 relative'>
    <%= link_to root_path, class: 'inline-block' do %>
      <%= image_tag 'logo_without_appname.png', size: "50x50", class: 'rounded-full' %>
    <% end %>

    <div class='flex flex-row items-center space-x-2'>
      <%= link_to drive_records_path do %>
        <i class='fa-solid fa-car w-7 h-7 p-2'></i>
      <% end %>
      <%= link_to bookmarks_destinations_path do %>
        <i class='fa-solid fa-bookmark w-7 h-7 p-2'></i>
      <% end %>
      <%= link_to profile_path do %>
        <i class='fa-solid fa-user w-7 h-7 p-2'></i>
      <% end %>
      <%= link_to logout_path, data: { turbo_method: :delete } do %>
        <i class='fa-solid fa-right-from-bracket w-7 h-7 p-2'></i>
      <% end %>
    </div>
  </nav>
</header>
