<!-- 削除対象となるブックマークに紐づくDestinationレコード自体を指定し、bookmark_pathの引数に渡す -->
<%= link_to bookmark_path(
    current_user.bookmark_destinations.find_by(
      google_places_api_id: place.google_places_api_id
    )
  ), 
  id: "js-bookmark-button-for-place-#{place.google_places_api_id}",
  data: { turbo_method: :delete } do %>
  <i class="fa-solid fa-bookmark w-4 h-6 mt-1"></i>
<% end %>
